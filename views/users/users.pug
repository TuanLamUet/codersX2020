extends ../layouts/nav-bar.pug

block content
  
  h2 Đăng nhập
  a.btn.btn-success(href="/users/login") Đăng nhập
  br
  
  if errors
    each error in errors  
      .alert.alert-danger=error

  h2 Tạo user mới
  form(action="/users/create" method="POST")
    input(type="text" name="name" placeholder="Nhập tên user" required)
    input(type="email", name="email" placeholder="nhập email")
    button(type="submit") Tạo

  ul
    each user in users
      li
        span=user.name
        a(href="/users/"+user.userId+"/update") Sửa
        a(href="/users/"+user.userId+"/delete") Xóa
  

