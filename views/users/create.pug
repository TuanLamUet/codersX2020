extends ../layouts/nav-bar.pug

block content
  form.container(action="/users/create" method="POST" enctype="multipart/form-data")
    h2 Tạo user
    if errors
      each error in errors  
        .alert.alert-danger=error
    .form-group
      label(for='name') username
      input#name.form-control(type='text', name="name", placeholder='Enter your usernam' value=values ? value.username : '')

    .form-group
      label(for='email') Email address
      input#email.form-control(type='email', name="email", placeholder='Enter email' value=values ? values.email : '')
      small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
    .form-group
      label(for='password') Password
      input#email.form-control(type='password', name="password", placeholder='Enter your password' value=values ? values.password : '')
    .form-group
      label(for="avatar")  Upload avatar
      input#avatar.form-control-file(type="file", name="avatar")
    button.btn.btn-outline-success(type='submit') Tạo
